<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Ecommerce Suite" verbose="1">
    <test name="smoke + regression Tests">
        <groups>
            <define name="sr">
            <include name="regression"/>
            <include name="smoke"/>
            </define>
            <run>
                <include name="sr"/>
                <exclude name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="Tests_2.EcommerceTests">
            <methods>
                <include name = "setup"/>
                <include name =".*"/>
            </methods>
            </class>
       </classes>
    </test>    
</suite>